<form method="post" action="/recipes/<%= @recipe.id %>">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <h4>Name: <input type="text" name="name" value="<%= @recipe.name %>"></h4>
    <h4>Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></h4>
    <h4>Cook Time: <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></h4>
    <button type="submit">Submit</button>
</form>